<h1>Burger Tracker</h1>

<main>
  <div>
    <h2>Burgers To Eat</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> layouts/burger devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div>
    <h2>Devoured Burger(s)</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> layouts/burger devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</main>


<div class="add-burger">
    <span>Add a New Burger to Devoure</span>
    <form class="create-form">
    <div>
        <label for="nb">Burger Name:</label>
        <input type="text" id="nb" name="name" placeholder="your new burger name">
    </div>
    <button type="submit">Add Burger</button>
    </form>
</div>